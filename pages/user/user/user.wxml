<view class="container">
  <scroll-view scroll-y="true" class="scroll_body">
    <view class="user_head">
      <!-- <image src="{{headImage}}" bindtap="headImageClick">></image>
      <text>nieli</text>  
      <text class="text2">13333333333</text> -->
      <!-- 如果只是展示用户头像昵称，可以使用 <open-data /> 组件 -->
